<h1>New Beer</h1>

<%= form_for(@beer) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <br />
  <%= f.label(:beer_type) %>
  <%= f.text_field(:beer_type) %>
  <br />
  <%= f.label(:description) %>
  <%= f.text_field(:description) %>
  <br />
  <%= f.label(:brewing_time) %>
  <%= f.text_field(:brewing_time) %>
  <br />
  <%= f.submit %>
<% end %>
