<h1>All Beers</h1>
<table>
  <thead>
    <tr>
      <td>Beer Name</td>
      <td>Beer Type</td>
      <td>Beer Description</td>
      <td>Brewing Time</td>
    </tr>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr class="beer-row" id="<%= dom_id(beer) %>">
        <td class="name"><%= beer.name %></td>
        <td class="beer_type"><%= beer.beer_type %></td>
        <td class="description"><%= beer.description %></td>
        <td class="brewing_time"><%= beer.brewing_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
